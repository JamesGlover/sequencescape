
<ul id="batch_annotations_<%= @batch.id %>" class="list-group">
  <% if @batch.comments.size > 0 %>
    <% @comments.each do |comment| %>
      <li class="list-group-item">
        <%= render partial: "shared/comment" ,
                   locals: { comment: comment, commentable: @batch, update_target: "batch_annotations_#{@batch.id}" }%>
      </li>
    <% end %>
  <% else %>
    <%= display_user_guide(I18n.t('batches.comments.no_comments')) %>
  <% end %>
</ul>
