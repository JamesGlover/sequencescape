
<ul id="study_annotations_<%= @study.id %>" class="list-group">
  <% if @study.comments.size > 0 %>
    <% @comments.each do |comment| %>
      <li class="list-group-item">
        <%= render partial: "shared/comment" ,
                   locals: { comment: comment, commentable: @study, update_target: "study_annotations_#{@study.id}" }%>
      </li>
    <% end %>
  <% else %>
    <%= display_user_guide(I18n.t('studies.comments.no_comments')) %>
  <% end %>
</ul>
