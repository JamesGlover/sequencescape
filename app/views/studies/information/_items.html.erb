
<div class="card">
  <div class="card-header">
  <ul class="nav nav-pills card-header-pills" role="tablist">
    <% @summaries.each do |key, description| %>
      <% selected = summary == key ? 'active' : '' %>
      <%= content_tag(:li, class: selected) do %>
        <%= link_to description, show_summary_study_information_path(@study, {summary: key}.merge(@extra_params.to_h)), class: (summary == key ? 'selected nav-link' : 'nav-link'), remote: true, :'data-throbber' => '.loading-bar-container', :'data-failure' => '#remote_error', :'data-update' => '#everything', :'data-tab-group' => 'studies-summaries-tab' %>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div>
    <%= loading_bar %>
    <%= remote_error %>
    <div id="everything"></div>
  </div>
</div>
